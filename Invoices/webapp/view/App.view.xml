<mvc:View controllerName="Antonio.Invoices.controller.App"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <Shell >
        <App> 
            <pages>
                <Page title="{i18n>appTitle}">
                    <headerContent>
                        <Button id="helloDialogHeader"
                                icon="sap-icon://action" 
                                text="{i18n>helloDialogBut}" 
                                press=".onOpenDialogHeader" 
                                class="sapUiSmallMarginEnd"/>  
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="Antonio.Invoices.view.HelloPanel"/>
                        <mvc:XMLView viewName="Antonio.Invoices.view.InvoicesList"/>                        
                    </content>
                </Page>
        </pages>
        </App>
    </Shell>
</mvc:View>