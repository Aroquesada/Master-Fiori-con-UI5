<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Panel headerText="{i18n>panelFrTitle}" 
           class="sapUiResponsiveMargin" 
           width="50%"
           expandable="{device>/system/phone}"
           expanded="{= !${device>/system/phone} }">
<!-- expandable (implica mostrar el panel de forma compacta) toma el valor true si estamos en un teléfono y false si no lo estamos-->
<!-- expanded toma el valor true si NO estamos en un teléfono y false si lo estamos-->           
        <f:SimpleForm id="form" editable="true">
            <f:content>
                <Label text="{i18n>labelPerson}" labelFor="persName"/>
                <Input id="persName" width="40%"/>
            </f:content>
        </f:SimpleForm>
    </Panel>
</core:FragmentDefinition>