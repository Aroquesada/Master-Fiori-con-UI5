<mvc:View controllerName="Antonio.Invoices.controller.HelloPanel"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"          
          displayBlock="true">
    <Panel headerText="{i18n>helloPanel}" 
           class="sapUiResponsiveMargin" 
           width="auto"
           expandable="{device>/system/phone}"
           expanded="{= !${device>/system/phone} }">
<!-- expandable (implica mostrar el panel de forma compacta) toma el valor true si estamos en un teléfono y false si no lo estamos-->
<!-- expanded toma el valor true si NO estamos en un teléfono y false si lo estamos-->
        <content>
            <Button id="helloDialogButton"
                    icon="sap-icon://action" 
                    text="{i18n>helloDialogBut}" 
                    press=".onOpenDialog" 
                    class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"/>        
            <Button text="{i18n>showHelloButtonText}" 
                    press=".onShowHello" 
                    class="sapUiSmallMarginEnd sapUiHideOnDesktop"/>
            <Input value="{/recipient/name}"
                   valueLiveUpdate="true"
                   width="60%"/>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="Antonio.Invoices.view.Form01" type="XML"/>
</mvc:View>